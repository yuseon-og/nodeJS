  <h4 class="ml-2 my-3">서버에서 가져온 할일 리스트</h4>
  <ul class="list-group">
    <!-- <h1><%= posts %></h1>
      <h2><%= posts %></h2> -->

    <%for(let i=0; i<posts.length; i++ ) { %>
      <li class="list-group-item">
        <p>번호 : <%=posts[i]._id %></p>
        <h4>할일 제목 : <%=posts[i].제목%>
        </h4>
        <p>마감 일자 : <%=posts[i].날짜%>
        </p>
        <button class="delete" id="<%=posts[i]._id %>">삭제</button>
      </li>
      <% } %>

  </ul>

  <script src="https://code.jquery.com/jquery-3.5.1.min.js">  </script>

  <script>
    $(".delete").click((e)=>{
      let dataId = e.target.id
      $.ajax({
      method : 'DELETE',
      url : '/delete',
      data : {_id:dataId}
    }).done((result)=>{

    })
    })
   

  </script>

